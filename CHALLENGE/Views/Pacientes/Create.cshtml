@page
@model CreateModel
@{
ViewData["Title"] = "Cadastrar Paciente";
}

<h1>Cadastrar Paciente</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Paciente.Nome"></label>
        <input asp-for="Paciente.Nome" class="form-control" />
        <span asp-validation-for="Paciente.Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paciente.Idade"></label>
        <input asp-for="Paciente.Idade" class="form-control" />
        <span asp-validation-for="Paciente.Idade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paciente.Email"></label>
        <input asp-for="Paciente.Email" class="form-control" />
        <span asp-validation-for="Paciente.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
